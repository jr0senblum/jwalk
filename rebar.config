%% -*- erlang -*-

{erl_opts, [
            warnings_as_errors,
            warn_export_all,
            warn_untyped_record,
            inline
           ]}.

{dialyzer, [{warnings, [no_return,
                             no_unused,
                             no_improper_lists,
                             no_fun_app,
                             no_match,
                             no_opaque,
                             no_fail_call,underspecs,
                             error_handling,
                             race_conditions,
                             unmatched_returns]}]}.
{minimum_otp_vsn, "17.0"}.

{xref_checks, [
               fail_on_warning,
               undefined_function_calls
              ]}.

{clean_files, [".eunit/*", "ebin/*.beam"]}.

{cover_enabled, true}.

{edoc_opts, [
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}
            ]}.
{validate_app_modules, true}.


